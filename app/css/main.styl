@font-face
    font-family 'dm'
    src url('./../assets/dm_text.ttf')

@font-face
    font-family 'pxl'
    src url('./../assets/pixelar.otf')
    font-weight normal

html, body
    padding 0
    margin 0
    overflow-x hidden

body
    font-family dm
    webkit-font-smoothing never
    font-smoothing grayscale
    text-rendering optimizeSpeed
    background #000000
    color #ffffff
    overflow-x hidden

#composer
    position fixed
    z-index 100
    font-family 'pxl'
    // webkit-font-smoothing never
    canvas
        display block
        image-rendering pixelated
        font-smooth never
        -webkit-font-smoothing none
        
.page
    min-height 100vh
    display none
    &.light-scheme
        background #ffffff
        color #000000
    &.active
        display block
    .title
        background #000000
        color #ffffff
        padding 10px 20px
        width 100%
        z-index 100
        font-size 23px
        letter-spacing -0.75px
        margin-bottom 12px
    .inner
        margin 0px 20px
        font-size 46px
        line-height 46px
        letter-spacing -1.5px
        p
            margin-top 0
            &.tiny
                font-size 23px
                line-height 23px
                letter-spacing -0.75px
mod-write
    textarea
        width 100%
        height 50vh
        border none
        overflow auto
        outline none
        box-shadow none
        resize none
        font-family dm
        font-size 46px
        line-height 46px
    button
        position absolute
        bottom 0
        left 0
        width 100%
        background none
        color inherit
        border none
        padding 0
        font inherit
        cursor pointer
        outline inherit
        text-align left
        padding 5px 20px
        background #000000
        color #ffffff
mod-photo
    input
        display none
    #imageViewer
        display none
        .preview
            margin 20px 0px
            width calc( 100vw - 40px )
            height calc( 100vw - 40px )
            background-size cover
            background-position center center

mod-icon
    .iconHolder
        width calc( 50vw - 25px )
        height calc( 50vw - 25px )
        background-size 90% 90%
        background-position center center
        background-repeat no-repeat
        image-rendering pixelated
        background-color #666666
        margin-bottom 8px
        border solid 1px#000000
        &.selected
            border solid 1px#ffffff
        float left
        &:nth-child( odd )
            margin-left 3px
        &:nth-child( even )
            margin-right 3px

mod-photo-preview
    canvas
        margin-top 20px

mod-menu-gallery
    canvas
        image-rendering pixelated
        border-solid 1px #ffffff

#menuBut
    position absolute
    top 20px
    right 20px
    font-size 64px
    line-height 0
    text-decoration none
a
    color #ffffff

.clearfix:after {
   content: " "; /* Older browser do not support empty content */
   visibility: hidden;
   display: block;
   height: 0;
   clear: both;
}